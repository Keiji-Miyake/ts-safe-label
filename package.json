{
  "name": "ts-safe-label",
  "version": "0.1.0",
  "description": "Type-safe label list generator for TypeScript enums and union types",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "biome lint src",
    "format": "biome format --write src",
    "check": "biome check --write src",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "typescript",
    "enum",
    "union-type",
    "type-safe",
    "label",
    "select",
    "ui"
  ],
  "author": "Keiji Miyake",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Keiji-Miyake/ts-safe-label.git"
  },
  "homepage": "https://github.com/Keiji-Miyake/ts-safe-label#readme",
  "bugs": {
    "url": "https://github.com/Keiji-Miyake/ts-safe-label/issues"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@types/node": "^20.19.25",
    "@vitest/ui": "^4.0.8",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
